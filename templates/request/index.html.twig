{% extends 'base.html.twig' %}

{% block title %}Request index{% endblock %}

{% block body %}
    <h1>Request index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Party</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for request in requests %}
            <tr>
                <td>{{ request.id }}</td>
                <td>{{ request.subject }}</td>
                <td>{{ request.party }}</td>
                <td>{{ request.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('request_show', {'id': request.id}) }}">show</a>
                    <a href="{{ path('request_edit', {'id': request.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('request_new') }}">Create new</a>
{% endblock %}
