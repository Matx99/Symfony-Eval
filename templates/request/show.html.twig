{% extends 'base.html.twig' %}

{% block title %}Request{% endblock %}

{% block body %}
    <h1>Request</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ request.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ request.subject }}</td>
            </tr>
            <tr>
                <th>Party</th>
                <td>{{ request.party }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ request.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('request_index') }}">back to list</a>

    <a href="{{ path('request_edit', {'id': request.id}) }}">edit</a>

    {{ include('request/_delete_form.html.twig') }}
