<form method="post" action="{{ path('litigation_delete', {'id': litigation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ litigation.id) }}">
    <button class="btn btn-info">Delete</button>
</form>
